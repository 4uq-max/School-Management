<section class="uk-section uk-padding-remove-top" id="border">
  <div class="uk-container uk-margin uk-flex uk-flex-row uk-flex-around">
    <div>
      {{#if user.image}}
      <img id="img" class="uk-border-circle" src="{{user.image}}" alt="{{user.name}}">
      {{else}}
      <img id="img" src="https://static.thenounproject.com/png/1095867-200.png" alt="profile-image">
      {{/if}}
      <div class="uk-margin-large-top uk-margin-medium-left">
        <div>
          <h2 class="uk-text-center uk-inline" id="coral">{{user.name}}</h2>
          <a class="uk-icon-button" uk-icon="icon: camera" uk-tooltip="Upload profile photo" uk-icon="icon: file-edit"
            uk-toggle="target: #edit-profile"></a>
        </div>
        <form id="edit-profile" action="/teacher/{{user._id}}/edit" method="POST" enctype="multipart/form-data" hidden>
          <div class="uk-margin">
          </div>
          <div class="js-upload" uk-form-custom>
            <input type="file" name="postPic">
            <button class="uk-button uk-button-default uk-button-small" type="button" tabindex="-1">Select
              image</button>
          </div>
          <button class="uk-button uk-button-small" id="button" type="submit">Save</button>
        </form>
        <h5 class="uk-text-center uk-margin-small-top">{{#each materias as |materia|}}
          | {{materia.materia}} |
          {{/each}}</h5>
      </div>
    </div>

    <div class="uk-flex-inline">

      <div>
        <div class=" uk-overflow-auto uk-width-1-2 uk-box-shadow-small uk-padding-small" id="text">
          <table class="uk-table uk-table-hover uk-table-divider uk-table-middle uk-text-center">
            <thead>
              <tr>
                <td class="uk-width-small">PERIOD / STUDENT</td>
                {{#each alumni1 as |al1|}}
                <td>{{al1.name}}</td>
                {{/each}}
              </tr>
            </thead>
            <tbody>
              {{#each materias.[0].notes as |mat|}}
              <tr>
                <td>{{mat.periodo}}</td>
                {{#each mat.note as |calif|}}
                <td>{{calif}}</td>
                {{/each}}
              </tr>
              {{/each}}
            </tbody>
            <thead>
              <tr>
                <td class="uk-width-small">PERIOD / STUDENT</td>
                {{#each alumni2 as |al2|}}
                <td>{{al2.name}}</td>
                {{/each}}
              </tr>
            </thead>
            <tbody>
              {{#each materias.[1].notes as |mat|}}
              <tr>
                <td>{{mat.periodo}}</td>
                {{#each mat.note as |calif|}}
                <td>{{calif}}</td>
                {{/each}}
              </tr>
              {{/each}}
            </tbody>
          </table>
        </div>
      </div>
</section>