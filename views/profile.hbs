<section class="uk-section uk-padding-remove-top" id="border">
  <div class="uk-container uk-margin uk-flex uk-flex-row uk-flex-around">
    <div class="uk-margin-medium-top uk-flex uk-flex-column">
      {{#if user.image}}
      <img id="img" class="uk-border-circle" src="{{user.image}}" alt="{{user.name}}">
      {{else}}
      <img id="img" class="uk-border-circle" src="https://static.thenounproject.com/png/1095867-200.png"
        alt="profile-image">
      {{/if}}
      <div class="uk-margin">
        <div class="uk-flex uk-flex-around uk-width-medium">
          <h2 id="coral">{{user.name}}</h2>
          <a class="uk-icon-button" uk-tooltip="Edit profile" uk-icon="icon: file-edit"
            uk-toggle="target: #edit-profile"></a>
        </div>
        <form id="edit-profile" action="/profile/{{user._id}}/edit" method="POST" enctype="multipart/form-data" hidden>
          <div class="uk-margin">
            <div class="uk-inline">
              <span class="uk-form-icon" uk-icon="icon: user"></span>
              <input name="name" class="uk-input" type="text" placeholder="Name" value="{{user.name}}">
            </div>
          </div>
          <div class="uk-margin">
            <div class="uk-inline">
              <span class="uk-form-icon" uk-icon="icon: mail"></span>
              <input name="email" class="uk-input" type="email" placeholder="e-mail" value="{{user.email}}">
            </div>
          </div>
          <div class=" uk-flex uk-flex-row uk-flex-around uk-width-medium">
            <div class="js-upload" uk-form-custom>
              <input type="file" name="postPic">
              <button class="uk-button uk-button-default uk-button-small" type="button" tabindex="-1">Select
                image</button>
            </div>
            <button class="uk-button uk-button-small" id="button" type="submit">Save</button>
          </div>
        </form>
        <div class="uk-margin uk-card uk-card-default uk-width-large">
          <div class="uk-card-header">
            <div class="uk-grid-small uk-flex-middle" uk-grid>
              <div class="uk-width-expand">
                <h3 class="uk-card-title uk-margin-remove-bottom">Teachers comments</h3>
              </div>
            </div>
          </div>
          <div class="uk-card-body">
            <ul class="uk-list uk-list-large uk-list-divider">
              {{#each user.comment as |comment| }}
              <li>{{comment}}</li>
              {{/each}}
            </ul>
          </div>
        </div>
      </div>
    </div>
    <div class="uk-flex-inline">
      <div id="large">
        <div class=" uk-overflow-auto uk-width-xlarge uk-box-shadow-small uk-padding-small" id="text">
          <table class="uk-table uk-table-hover uk-table-divider uk-table-middle uk-text-center">
            <thead>
              <tr>
                <td class="uk-width-small">SUBJECT / PERIOD</td>
                {{#each materias as |materia|}}
                <td class="uk-width-medium">{{materia.materia}}</td>
                {{/each}}
              </tr>
            </thead>
            <tbody>
              {{#each materias.[0].notes as |mat|}}
              <tr>
                <td class="uk-width-medium">{{mat.periodo}}</td>
                {{#each mat.note as |calif|}}
                <td>{{calif}}</td>
                {{/each}}
              </tr>
              {{/each}}
            </tbody>
          </table>
        </div>
      </div>
</section>